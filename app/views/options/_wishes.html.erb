
<h3 style="text-align: center"><span class="<%=index_icon(user_icon)%>"></span> <%=t('wishes')%></h3>

<table class="table table-striped">
  <thead>
    <tr class="header">
      <th class="center" width="90px;"><%= t('priority') %></th>
      <th class="center" width="130px"><%= t('preference') %></th>
      <th class="center"><%= t('interested') %></th>
      <th class="center"> <%= t('comments') %> </th>
    </tr>
  </thead>
  <tbody>
    <% @option.wishes.each do |wish| %>
      <tr>
        <div class="form_table">
          <td class="center"><%= wish.priority %></td>
          <td class="center"><%= wish.group.code_with_group_show %></td>
          <td><%= wish.user.name %></td>
          <td>
            <% if wish.comments.present? %>
            <%= wish.comments %>
            <% end %>
          </td>
        </div>
      </tr>
    <% end %>

  </tbody>
</table>

<div id="div-comments"> </div>
