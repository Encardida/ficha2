<div class="container">
	<div class="modal fade" id="wish_modal">
		<div class="modal-dialog modal-sg">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h3 class="center"><span class="<%=index_icon(option_icon)%>"></span> Escolha</h3>
				</div>
				<% @wish = Wish.new %>
				<%= form_for @wish, :url => create_wishes_path(@option), :method => new_wish_path, :html => { :class => "form-horizontal wish" } do |f| %>

					</br>
					<div class="form-group">
			      <%= f.label t('preference'), :class => 'control-label col-md-3' %>
			      <div class="col-md-8">
			        <%= f.collection_select(:group_id, @option.groups, :id, :code_with_group, {:include_blank => true} , { :class => 'form-control'}) %>
			        <%= f.error_span(:matter) %>
			      </div>
			    </div>

					<div class="form-group">
						<%= f.label :priority, :class => 'control-label col-md-3' %>
						<div class="col-md-8">
							<%= f.select(:priority, priority_list, {}, {:class => 'form-control', :style => 'float:left;width:155px;'}) %>
							<%= f.error_span(:priority) %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :comments, :class => 'control-label col-md-3' %>
						<div class="col-md-8" id="div_comments">
							<%= f.text_area :comments, :class => 'form-control resize', :maxlength => 3500, rows: 3 %>
						</div>
					</div>

				  <div class="modal-footer">
				    <%= f.submit "Confirmar desejo", :class => 'btn btn-primary' %>
				    <a href="" class="btn btn-default" data-dismiss="modal">Close</a>
				  </div>

				<% end %>

			</div>
		</div>
	</div>
</div>
