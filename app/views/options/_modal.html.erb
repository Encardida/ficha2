<div class="container">
	<div class="modal fade" id="wish_modal">
		<div class="modal-dialog modal-sg">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h3 class="center"><span class="<%=index_icon(wish_icon)%>"></span> <%=t('wish')%></h3>
				</div>
				<% @wish = Wish.new %>
				<%= form_for @wish, :url => create_wishes_path(@option), :method => new_wish_path, :html => { :class => "form-horizontal wish" }, :remote => true do |f| %>

					<div class="form-group">
			      <%= f.label :group, :class => 'control-label col-lg-2' %>
			      <div class="col-lg-9">
			        <%= f.collection_select(:group_id, Group.all, :id, :code_with_group, {:include_blank => true} , { :class => 'form-control'}) %>
			        <%= f.error_span(:matter) %>
			      </div>
			    </div>

					<div class="form-group">
						<%= f.label :priority, :class => 'control-label col-lg-2' %>
						<div class="col-lg-9">
							<%= f.text_field :priority, { :class => 'form-control'} %>
							<%= f.error_span(:priority) %>
						</div>
					</div>

				  <div class="modal-footer">
				    <%= f.submit "Confirmar desejo", :class => 'btn btn-primary' %>
				    <a href="" class="btn btn-default" data-dismiss="modal">Close</a>
				  </div>

				<% end %>

			</div>
		</div>
	</div>
</div>
