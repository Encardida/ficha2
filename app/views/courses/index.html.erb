<%- model_class = Course -%>

<div class="page-header no-mt-mb">
  <center><h1><span class="<%=index_icon(course_icon)%>"></span> <%=t('courses')%></h1></center>
</div>

  <div class="search-box mb-20">
    <%= search_form_for @q, url: search_courses_path, html: { method: :post } do |f| %>

      <%= f.text_field :name_cont, :autofocus => true,
            placeholder: "Procurar", :autocomplete => "off", :class => 'form-control searcher',
            :id => "course_search_field" %>

    <% end %>

  </div>

<div id="courses_partial" class="mb-15pc no-mt-mb" >
  <%= render 'courses' %>
</div>
