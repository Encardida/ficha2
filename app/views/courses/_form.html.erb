<%= form_for @course, :html => { :class => "form-horizontal matter" } do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
    <header class="panel-heading header"><%= t('details') %></header>
    </br>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-md-2' %>
      <div class="col-md-9">
        <%= f.text_field :name, :class => 'form-control' %>
        <%=f.error_span(:name) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :code, :class => 'control-label col-md-2' %>
      <div class="col-md-3" id="div_code">
        <%= f.text_field :code, :class => 'form-control' %>
        <%=f.error_span(:code) %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-10">
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          courses_path, :class => 'btn btn-default right pattern-header-courses' %>
          <%= f.submit nil, :class => 'btn btn-primary right pattern-header-courses' %>
        </div>
      </div>
    </div>

  </div>

<% end %>
