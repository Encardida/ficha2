<%= form_for @unite_matter, :html => { :class => "form-horizontal group"} do |f| %>
  <% if unite_matter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(unite_matter.errors.count, "error") %> prohibited this unite_matter from being saved:</h2>

      <ul>
      <% unite_matter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.text_field 'opt_1', :value => @opt_1.id, :class => 'form-control' %>

  <%= link_to new_button.html_safe, add_unite_matters_path(@unite_matter),
    :class => 'btn btn-default btn-sm simple_button',
    title: 'Adicionar Disciplina', 'data-toggle' => 'tooltip', 'data-placement' => 'right', :remote => true %>

  <div id="unite_matters_partial">
    <%= render "matters" %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
