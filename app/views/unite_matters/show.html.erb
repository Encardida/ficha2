<%- model_class = UniteMatter  -%>
<% show_unite_matter %>

<h1 class="center"><span class="<%=index_icon(unite_matters_icon)%>"></span> Uni√£o</h1>

<%= form_for @unite_matter, :html => { :class => "form-horizontal group" } do |f| %>

  <div class="panel panel-default" style="margin-bottom:30px;">
    <header class="panel-heading header headerOutra">Detalhes</header>
    <br>

    <div class="field">
      <div class="form-group">
        <%= f.label :name, :class => 'control-label col-xs-2' %>
        <div class="col-xs-2">
          <%= f.text_field :name, :class => 'form-control name-show mb-20', :readonly => true %>
        </div>
      </div>
    </div>

    <div id="unite_matters_partial" class="less">
      <%= render "matters" %>
    </div>

  </div>
<% end %>

<%= link_to 'Editar', edit_unite_matter_path(@unite_matter), :class => 'btn btn-default margin-bottom-unite' %>
<%= link_to 'Voltar', unite_matters_path, :class => 'btn btn-default margin-bottom-unite' %>
