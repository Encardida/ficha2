<%- model_class = PerformBackup -%>

<div class="page-header no-mt-mb pattern-header">

  <h1 class="center"><span class="<%=index_icon(backups_icon)%>"></span> <%=t('perform_backups')%></h1>

</div>

<div class="panel center less pb-80">
  <%= link_to "Realizar backup agora", perform_backups_do_perform_path,
      :title => "Realizar backup agora", :class => "btn btn-primary performNow",:id => "perform_backup", remote: true %>
  <%= form_for @perform_backup, :html => { :class => "form-horizontal group"} do |f| %>


    <div class="form-group" id="form_backup">
      <label class="control-label labelCada">A cada</label>
      <div class="days">
        <%= f.text_field :days, :class => 'form-control daysWidth' %>
      </div>

      <label class="control-label labelDias">dia(s)</label>
      <label class="control-label labelAs">Ã s</label>

      <div class="time">
        <%= f.time_select :time, { minute_step: 30, :start_hour => 0}, :class => 'form-control selectTime' %>
      </div>

      <%= f.submit "Agendar", :class => 'btn btn-primary btnAgendar', remote: true %>
    </div>

  <% end %>

  <div id="spinner" class="center spin">
    <div class="showbox">
      <div class="loader">
        <svg class="circular" viewBox="25 25 50 50">
          <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
        </svg>
      </div>
    </div>
    <h4 class="mt-80">Realizando backup...</h4>
  </div>

  <div id="perform_render"></div>

</div>
