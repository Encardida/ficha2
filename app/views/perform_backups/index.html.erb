<%- model_class = PerformBackup -%>

<div class="page-header noMarginTop padraoHeader2">

  <center><h1><span class="<%=index_icon(backups_icon)%>"></span> <%=t('backups')%></h1></center>

</div>

<div class="panel center less">
  <%= link_to "Realizar backup agora", perform_backups_do_perform_path,
      :title => "Realizar backup agora", :class => "btn btn-default",:id => "perform_backup", remote: true%>

  <%= form_for @perform_backup, :html => { :class => "form-horizontal group"} do |f| %>
  <div class="field">
    <div class="form-group">
      <%= f.label :days, :class => 'control-label col-lg-2' %>
      <div class="col-md-2">
        <%= f.text_field :days, :class => 'form-control txtName' %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="form-group">
      <%= f.label :time, :class => 'control-label col-lg-2' %>
      <div class="col-md-2">
        <%= f.text_field :time, :class => 'form-control txtName' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Agendar", :class => 'btn btn-primary right', remote: true %>
    </div>
  </div>

  <% end %>

      <div id="spinner" style="display: none; margin:0 auto;text-align:center" class="center">
        <div class="showbox">
          <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
              <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
            </svg>
          </div>
        </div>
        <h4 style="margin-top:150px;">Realizando backup...</h4>
      </div>

<div id="perform_render">

</div>


</div>
