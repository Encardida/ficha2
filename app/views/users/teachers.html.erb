<%- model_class = User -%>

<div class="page-header">

  <div style="color: black; float: right;">

    <%= search_form_for @q, url: search_users_path,html: { method: :post } do |f| %>
        <%= f.text_field :name_cont, :autofocus => true, placeholder: "procurar nome" %>
        <%= f.submit%>
    <% end %>
  </div>

  <h1><%=t('teachers') %></h1>
</div>

<div id="teaches">
  <%= render 'users' %>
</div>

<center>
  <nav aria-label="Page navigation">
    <ul class="pagination pagination-sm">
      <%= render_pages(@elements, @page, "/teachers", @length).html_safe %>
    </ul>
  </nav>
</center>
