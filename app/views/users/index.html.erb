<%- model_class = User -%>

<div class="page-header no-mt-mb">
  <h1 class="center"><span class="<%=index_icon(user_icon)%>"></span> Usu√°rios</h1>

  <div class="search-box">

    <%= search_form_for @q, url: search_users_path,html: { method: :post } do |f| %>

      <% if user_signed_in? %>
        <%= f.select(:roles_id_eq, options_for_roles, {},
            {:class => 'form form-control filter-box'}) %>
      <% end %>

      <%= f.text_field :name_or_email_cont, :autofocus => true, placeholder: "Procurar",
         :autocomplete => "off", :class => 'form-control searcher'%>

    <% end %>
  </div>

</div>

<div id="users_partial" class="partial-content">
  <%= render 'users' %>
</div>
