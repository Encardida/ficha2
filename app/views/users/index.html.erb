
<div class="page-header">
  <h1><%= t('users') %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t('name') %></th>
      <th>Email</th>
      <th><center><%=t('role') %></center></th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><center><%= t(user.role) %></center></td>
        <td>
          <%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
