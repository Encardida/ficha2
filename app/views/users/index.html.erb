<div class="page-header noMarginTop">

  <center><h1><span class="<%=index_icon(user_icon)%>"></span> Usu√°rios </h1>

  <div class="search-box">

    <%= search_form_for @q, url: search_users_path,html: { method: :post } do |f| %>

      <% if user_signed_in? %>
        <%= f.select(:roles_id_eq, options_for_roles, {},
