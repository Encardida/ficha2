<%= form_for(@contact) do |f| %>
  <center>
    <% if contact.errors.any? %>
      <div id="error_expl" class="panel panel-danger" style="width:400px">
        <div class="panel-heading">
          <h3 class="panel-title"> <%= pluralize(contact.errors.count, "erro(s)") %> ocorrido(s):</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <div class="panelContacts">
    <div class="form-group">
      <div class="field">
        <%= f.text_field :name, :placeholder => 'Seu nome', :value => user_name, :class => 'form-control', :style => 'width:400px;' %>
      </div>

      <div class="field">
        <%= f.text_field :email, :placeholder => 'Seu email', :value => user_email, :class => 'form-control', :style => 'width:400px;' %>
      </div>

      <div class="field">
        <%= f.text_area :message, :placeholder => 'Por favor, deixe sua mensagem', :class => 'form-control', :style => 'max-width:400px;height:300px' %>
      </div>

      <div class="actions">
        <input name="commit" value="ENVIAR" class="btnC" data-disable-with="ENVIANDO" type="submit">
      </div>
      </center>
    </div>
</div>
<% end %>
