<%= form_for @ficha, :html => { :class => "form-horizontal ficha" } do |f| %>

  <% if @ficha.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ficha.errors.count, "error") %> prohibited this ficha from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ficha.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :program, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :program, :class => 'form-control' %>
    </div>
    <%=f.error_span(:program) %>
  </div>
  <div class="form-group">
    <%= f.label :general_objective, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :general_objective, :class => 'form-control' %>
    </div>
    <%=f.error_span(:general_objective) %>
  </div>
  <div class="form-group">
    <%= f.label :specific_objective, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :specific_objective, :class => 'form-control' %>
    </div>
    <%=f.error_span(:specific_objective) %>
  </div>
  <div class="form-group">
    <%= f.label :didactic_procedures, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :didactic_procedures, :class => 'form-control' %>
    </div>
    <%=f.error_span(:didactic_procedures) %>
  </div>
  <div class="form-group">
    <%= f.label :evaluation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :evaluation, :class => 'form-control' %>
    </div>
    <%=f.error_span(:evaluation) %>
  </div>
  <div class="form-group">
    <%= f.label :basic_bibliography, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :basic_bibliography, :class => 'form-control' %>
    </div>
    <%=f.error_span(:basic_bibliography) %>
  </div>
  <div class="form-group">
    <%= f.label :bicliography, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :bicliography, :class => 'form-control' %>
    </div>
    <%=f.error_span(:bicliography) %>
  </div>
  <div class="form-group">
    <%= f.label :teacher_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :teacher_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:teacher_id) %>
  </div>
  <div class="form-group">
    <%= f.label :matter_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :matter_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:matter_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                fichas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
