
function reload(){
  $("#matters_import").html("<%= escape_javascript(render("matters_import")) %> ");
  $("#teachers_import").html("<%= escape_javascript(render("teachers_import")) %> ");
  $("#imports_partial").html("<%= escape_javascript(render("imports")) %> ");
}

$('#loading-indicator').slideUp(1000);

reload();

if($('#matters_nav').hasClass('active')){
  $("#matters_import").show();
  $("#teachers_import").hide();
  $("#imports_partial").hide();
} else if ($('#teachers_nav').hasClass('active')) {
  $("#matters_import").hide();
  $("#teachers_import").show();
  $("#imports_partial").hide();
} else {
  $("#matters_import").hide();
  $("#teachers_import").hide();
  $("#imports_partial").show();
}


