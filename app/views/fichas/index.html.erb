<%- model_class = Ficha -%>

<div class="page-header">

  <div style="color: black; float: right;">
    <%= search_form_for @q do |f| %>
      <% if(user_signed_in?)%>
        <%= f.select(:status_cont, [['Todos', ''], ['Aprovados', 'Aprovado'], ['Reprovados', 'Reprovado'], ['Enviados', 'Enviado']]) %>
      <% end%>
      <%= f.text_field :program_cont, :autofocus => true, placeholder: "procurar" %>
      <%= search_button.html_safe %>
    <% end %>
  </div>

  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

</div>

<div id="fichas_partial">
  <%= render 'fichas' %>
</div>
