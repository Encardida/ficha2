<%- model_class = Ficha -%>

<div class="page-header">

  <div style="color: black; float: right;">
    <%= search_form_for @q do |f| %>
        <%= f.text_field :program_cont, :autofocus => true, placeholder: "procurar" %>
        <%= f.select( :status_cont, %w(Enviado Aprovado Reprovado)) %>
        <%= search_button.html_safe %>
    <% end %>
  </div>

  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

</div>

<div id="fichas_partial">
  <%= render 'fichas' %>
</div>
