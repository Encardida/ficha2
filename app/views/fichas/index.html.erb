
<%- model_class = Ficha -%>

<div class="page-header" style="height:auto;">

  <div style="color: black; float: right;">

    <%= search_form_for @q, url: search_fichas_path , html: { method: :post } do |f| %>


      <% if(user_signed_in?)%>

        <% if user_not_secretary %>
          <input id="yours_checkbox" data-role="<%= current_user.role %>" name="checkbox" type="checkbox" style="margin-top:10px;">
          <span>Suas</span>
        <% end %>

        <%= f.select(:status_cont, [['Todos', ''], ['Aprovados', 'Aprovado'], ['Reprovados', 'Reprovado'],
         ['Editando', 'Editando'], ['Enviados', 'Enviado']],{},{:class => 'form form-group form-control', :style => 'float:left;width:150px;'}) %>

      <% end %>

      <%= f.select( :year_eq, options_for_select(getYears, 'Todos'),{},{:class => 'form form-group form-control', :style => 'float:left;width:150px;margin-left:5px;margin-right:5px;'}) %>

      <%= f.text_field :team_or_matter_name_or_matter_code_or_user_name_cont, :autofocus => true, placeholder: "Procurar", :autocomplete => "off", :class => 'form-control', :style => 'float:right;width:180px;margin-left:10px;' %>

    <% end %>

  </div>

  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

</div>

<div id="fichas_partial">
  <%= render 'fichas' %>
</div>
