<%- model_class = Ficha -%>

<div class="page-header noMarginTop">

  <center><h1><span class="<%=index_icon(ficha_icon)%>"></span> <%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1></center>

</div>

<div class="searchBox">
  <%= search_form_for @q, url: search_fichas_path , html: { method: :post } do |f| %>

    <% if(user_signed_in?)%>

      <% if user_not_secretary? %>
        <input id="yours_checkbox" class="mg-top" data-role="<%= current_user.role %>" name="checkbox" type="checkbox">
        <span >Suas</span>
      <% end %>

      <%= f.select(:status_cont, [['Todos status', ''], ['Aprovados', 2], ['Reprovados', 3],
        ['Editando', 0], ['Encaminhados', 1]],{},{:class => 'form form-group form-control statusBox'}) %>

    <% end %>

    <%= f.select( :group_semester_id_eq, options_for_select(semester_options, current_semester.id),{},{:class => 'form form-group form-control filterBox'}) %>

    <%= f.text_field :group_name_or_group_matter_name_or_group_matter_code_or_user_name_cont, :autofocus => true, placeholder: "Procurar", :autocomplete => "off", :class => 'form-control searcher', :id => "fichas_input_search" %>

  <% end %>

</div>

<div id="fichas_partial" class="marginBottom">
  <%= render 'fichas' %>
</div>
