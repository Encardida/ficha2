<%- model_class = Ficha -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('id') %></th>
      <th><%= t('teacher') %></th>
      <th><%= t('matter') %></th>
      <th width="15%"><%= t('created_at') %></th>

      <% if user_signed_in? %>

        <th  width="20%">
          <%=t '.actions', :default => t("helpers.actions") %>
          <div style=float:right;>
            <%= link_to '+', new_ficha_path, :class => 'btn btn-primary btn-xs' %>
          <div>
        </th>

      <% end %>
    
    </tr>
  </thead>
  <tbody>
    <% @fichas.each do |ficha| %>
      <tr>
        <td><%= link_to ficha.id, ficha_path(ficha) %></td>
        <td><%= ficha.teacher.name %></td>
        <td><%= ficha.matter.name %></td>
        <td><%= ficha.created_at.strftime("%d/%m/%Y") %></td>

        <% if user_signed_in? %>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_ficha_path(ficha), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        ficha_path(ficha),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
