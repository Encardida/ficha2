<%- model_class = Ficha -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:program) %>:</strong></dt>
  <dd><%= @ficha.program %></dd>
  <dt><strong><%= model_class.human_attribute_name(:general_objective) %>:</strong></dt>
  <dd><%= @ficha.general_objective %></dd>
  <dt><strong><%= model_class.human_attribute_name(:specific_objective) %>:</strong></dt>
  <dd><%= @ficha.specific_objective %></dd>
  <dt><strong><%= model_class.human_attribute_name(:didactic_procedures) %>:</strong></dt>
  <dd><%= @ficha.didactic_procedures %></dd>
  <dt><strong><%= model_class.human_attribute_name(:evaluation) %>:</strong></dt>
  <dd><%= @ficha.evaluation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:basic_bibliography) %>:</strong></dt>
  <dd><%= @ficha.basic_bibliography %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bicliography) %>:</strong></dt>
  <dd><%= @ficha.bicliography %></dd>
  <dt><strong><%= model_class.human_attribute_name(:teacher_id) %>:</strong></dt>
  <dd><%= @ficha.teacher_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:matter_id) %>:</strong></dt>
  <dd><%= @ficha.matter_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              fichas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ficha_path(@ficha), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ficha_path(@ficha),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
