<%= form_for @teacher ,:html => { :class => "form-horizontal teacher" } do |f| %>

  <div class="panel panel-default">
    <header style="background-color: #222;color: white;"
            class="panel-heading"><%= t('details') %></header>
    <br>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-9">
        <%= f.text_field :name, :class => 'form-control',:autofocus => true, :size => 20 %>
      </div>
      <%=f.error_span(:name) %>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => 'control-label col-lg-2' %>
      <div class="col-lg-9">
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <%=f.error_span(:email) %>
    </div>

  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teachers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
