<%- model_class = User -%>
<div class="page-header">

  <div style="color: black; float: right;">
    <%= search_form_for @q, url: "/teachers" do |f| %>
        <%= f.text_field :name_cont, :autofocus => true, placeholder: "procurar nome" %>
        <%= f.submit%>
    <% end %>
  </div>

  <h1><%=t('teachers') %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('email') %></th>

      <% if user_signed_in? && current_user.admin? %>
        <th  width="15%">
          <center>
          <%=t '.actions', :default => t("helpers.actions") %>

          <div style=float:right;>
            <%= link_to new_button.html_safe, new_teacher_path, :class => 'btn btn-primary btn-xs' %>
          <div>

          </center>
         </th>
      <% end %>

    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= link_to teacher.name, teacher_path(teacher) %></td>
        <td><%= teacher.email %></td>

        <% if user_signed_in? && current_user.admin? %>
          <td>
            <%= link_to edit_button.html_safe,
                        edit_teacher_path(teacher), :class => 'btn btn-default btn-sm' %>
            <%= link_to remove_button.html_safe,
                        teacher_path(teacher),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
