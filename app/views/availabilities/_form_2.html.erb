<div class=" panel panel-default" style="padding: 20px; padding-bottom: 0px;">

  <%= form_for(@availability, remote: true) do |f| %>

    <% if @availability.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@availability.errors.count, "error") %> prohibited this availability from being saved:</h2>

        <ul>
        <% @availability.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <div class="header-panel">
          <div class="row">
            <div class="col-md-4 center">Preferência 1</div>
            <div class="col-md-4 center">Preferência 2</div>
            <div class="col-md-4 center">Preferência 3</div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 center">
        <div class="form-group">
          <%= f.select :preference_first, options_for_select(preferences),
              {:prompt => "Selecione..."}, {id: :preference_first, class: "form-control"} %>
        </div>
      </div>
      
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>
