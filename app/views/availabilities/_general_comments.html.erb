						</div>
					</div>

					<div id="general-edited" class="col-md-2" style="margin-top: 2px;">
						<%= link_to "Editar", change_general_comments_availabilities_path(@availability),
						button_configs(:edit, "btn btn-default simple_button", {style: 'margin-bottom: 10px;', remote: true}) %>
					</div>
				<% end %>
			</div>

		</div>
	</div>

</div>
