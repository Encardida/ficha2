<%= form_for @unite_group, :html => { :class => "form-horizontal group"} do |f| %>

  <% if @unite_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(unite_group.errors.count, "erro(s)") %> ocorrido(s):</h2>

      <ul>
      <% unite_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default" style="margin-bottom:70px;">
    <header class="panel-heading header headerOutra">Detalhes

    </header>
    <br>

    <div class="form-group">
      <%= f.label t("semester"), :class => 'control-label col-xs-2' %>
      <div class="col-xs-9">
        <%= f.text_field 'semester', :value => @unite_group.semester.semester_with_year,
        :class => 'form-control semester-with-year', :readonly => true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label t("matter"), :class => 'control-label col-xs-2' %>
      <div class="col-xs-9">
        <%= f.text_field 'matter', :value => @unite_group.matter.name,
        :class => 'form-control width-form-unite', :readonly => true %>
      </div>
    </div>

    <div id= "unite_groups_partial">
      <%= render "groups"  %>
    </div>


    <div class="form-group">
      <div class="col-xs-offset-2 col-xs-10">
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        unite_groups_path, :class => 'btn btn-default right' %>
        <%= f.submit "Atualizar", :class => 'btn btn-primary right' %>
      </div>
    </div>

<% end %>
