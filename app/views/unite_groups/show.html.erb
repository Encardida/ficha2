<%- model_class = UniteGroup  -%>
<% show_unite_group %>

<h1 class="center"><span class="<%=index_icon(unite_groups_icon)%>"></span> Uni√£o de Turma</h1>

  <div class="panel panel-default form-horizontal">
    <header class="panel-heading header"> <%= t("details") %></header>
    <br>

    <div class="form-group" >
      <label class="control-label col-xs-2" ><%= t("matter") %></label>
      <div class="col-xs-10">
        <span class="form-control matter-selector" readonly="true"> <%= @unite_group.matter.code_with_name %> </span>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-xs-2" ><%= t("name") %></label>
      <div class="col-xs-10">
            <span class="form-control width-form-unite" readonly="true"> <%= @unite_group.group_names.join(", ") %> </span>
      </div>
    </div>

    <div class="form-group" >
      <label class="control-label col-xs-2" ><%= t("semester") %></label>
      <div class="col-xs-10">
        <span class="form-control semester-with-year" readonly="true"> <%= @unite_group.semester.semester_with_year%> </span>
      </div>
    </div>

    <div id="unite_groups_partial" class="less">
      <%= render "united_groups" %>
    </div>

  </div>

<%= link_to 'Editar', edit_unite_group_path(@unite_group), :class => 'btn btn-default margin-bottom-unite' %>
<%= link_to 'Voltar', unite_groups_path, :class => 'btn btn-default margin-bottom-unite' %>
