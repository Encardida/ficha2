<div class="panel panel-default" style="padding:3px; background-color: #f9f9f9f; margin: 0 0 0 0;">
  <%= form_tag manage_options_choose_teacher_path, remote: true do %>

    <div class="row" style="margin: 0px;">
      <input name="group" type="hidden" value="<%= group.id %>" />

      <div class="col-md-4" style="padding: 0px;">
        <div class="form-control"> <%= group.code_with_group %> </div>
      </div>

      <% if group.has_ficha? %>

        <div class="col-md-7" style="padding: 0px;">
          <%= collection_select :user, :id, User.all, :id, :name, {prompt: "Selecione..."}, {calss: "form-control", name: "user"} %>
        </div>

        <div class="col-md-1" style="padding: 0 0 0 3px; margin-top: 2px;">
          <%= button_tag(type: "submit", class: "btn btn-success btn-sm", style: "margin-bottom: 10px;") do
            simple_check_button.html_safe
          end %>
        </div>

      <% else %>
        <div>
          done
        </div>
      <% end %>

    </div>

    <div class="row">
      <div class="col-md-12">

        <% group.option.wishes.each do |wish| %>
          <div>
            <%= wish.priority %>
            <%= wish.user.name %>
          </div>
        <% end %>
        
      </div>
    </div>

  <% end %>
</div>
