<%- model_class = Group -%>

<div class="page-header noMarginTop">

  <center><h1><span class="glyphicon glyphicon-th blue"></span> <%=t('groups')%></h1></center>

  <div class="searchBox" style="margin-top:10px;margin-bottom:15px;">
    <%= search_form_for @q, url: search_groups_path, html: { method: :post } do |f| %>
      <%= f.text_field :name_cont, :autofocus => true, placeholder: "Procurar", :autocomplete => "off", :class => 'form-control', :style => 'width:180px', :id => "group_search_field" %>
    <% end %>

  </div>

</div>

<div id="groups_partial" class="marginBottom" >
  <%= render 'groups' %>
</div>
