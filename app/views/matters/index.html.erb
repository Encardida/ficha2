<%- model_class = Matter -%>
<div class="page-header">

  <div style="color: black; float: right;">
    <%= search_form_for @q do |f| %>
        <%= f.text_field :name_cont, :autofocus => true, placeholder: "procurar nome" %>
        <%= f.submit %>
    <% end %>
  </div>

  <h1><%=t('matters') %></h1>


</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th class="form_table"><%= model_class.human_attribute_name(:name) %></th>
      <th width="25%"><%= model_class.human_attribute_name(:code) %></th>

      <% if user_signed_in? %>
        <th  width="20%">
          <%=t '.actions', :default => t("helpers.actions") %>
          <div style=float:right;>
            <%= link_to '+',
                        new_matter_path,
                        :class => 'btn btn-primary btn-xs' %>

          <div>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @matters.each do |matter| %>
      <tr >
        <div class="form_table">
          <td><%= link_to matter.name, matter_path(matter) %></td>
          <td><%= matter.code %></td>
          <% if user_signed_in? %>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_matter_path(matter), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          matter_path(matter),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          <% end %>
        </div>
      </tr>
    <% end %>

  </tbody>
</table>
