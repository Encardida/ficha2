<%- model_class = Matter -%>

<div class="page-header no-mt-mb">

  <h1 class="center"><span class="<%=index_icon(matter_icon)%>"></span> <%=t('matters')%></h1>

  <div class="search-box">
    <%= search_form_for @q, url: search_matters_path, html: { method: :post } do |f| %>
      <%= f.text_field :name_or_code_cont, :autofocus => true, placeholder: "Procurar",
          :autocomplete => "off", :class => 'form-control searcher'%>
    <% end %>
  </div>

</div>

<div id="matters_partial" class="partial-content">
  <%= render 'matters' %>
</div>
