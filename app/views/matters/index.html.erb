<%- model_class = Matter -%>
<div class="page-header">

  <div style="color: black; float: right;">
    <%= search_form_for @q do |f| %>
        <%= f.text_field :name_cont, :autofocus => true, placeholder: "procurar nome" %>
        <%= f.submit %>
    <% end %>
  </div>

  <h1><%=t('matters') %></h1>

</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="form_table"><%= model_class.human_attribute_name(:name) %></th>
      <th width="25%"><%= model_class.human_attribute_name(:code) %></th>

      <% if user_signed_in? && current_user.admin? %>
        <th  width="15%">
          <center>
          <%=t '.actions', :default => t("helpers.actions") %>

        <div style=float:right;>
            <%= link_to new_button.html_safe, new_matter_path, :class => 'btn btn-primary btn-xs' %>
          <div>
        </center>
      </th>
      <% end %>

    </tr>
  </thead>
  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <div class="form_table">
          <td><%= link_to matter.name, matter_path(matter) %></td>
          <td><%= matter.code %></td>

          <% if user_signed_in? && current_user.admin? %>
            <td>
              <%= link_to edit_button.html_safe,
                          edit_matter_path(matter), :class => 'btn btn-default btn-sm' %>

              <%= link_to remove_button.html_safe,
                          matter_path(matter),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-sm btn-danger' %>
            </td>
          <% end %>

        </div>
      </tr>
    <% end %>

  </tbody>
</table>
