<%- model_class = Matter -%>
<div class="page-header">

  <div style="color: black; float: right;">
    <%= search_form_for @q do |f| %>
        <%= f.text_field :name_cont, :autofocus => true, placeholder: "procurar nome" %>

        <%= search_button.html_safe %>

    <% end %>
  </div>

  <h1><%=t('matters') %></h1>

</div>

<div id="matters">
  <%= render 'matters' %>
</div>

<center>
  <nav aria-label="Page navigation">
    <ul class="pagination pagination-sm">
      <%= render_pages(@elements, @page, "/matters", @length).html_safe %>
    </ul>
  </nav>
</center>
