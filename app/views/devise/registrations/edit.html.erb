<div class="login-page">

  <div class="form-login">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

        <%= f.email_field :email, autofocus: true , placeholder: "Email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Atualmente aguardando confirmação de: <%= resource.unconfirmed_email %></div>
      <% end %>

      <i>(Deixe em branco se não deseja alterar)</i><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> caracteres mínimos</em>
      <% end %>

      <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confirme a senha" %>

      <i>(Precisamos de sua senha atual para confirmar as mudanças)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", placeholder: "Senha atual" %>

      <button name="commit" data-disable-with="Signup" type="submit ">Atualizar</button>

      <p class="message">Não está feliz?   <%= link_to "Cancelar minha conta", registration_path(resource_name), method: :delete %> </p>


      <%= link_to "Voltar", :back %>
    <% end %>
  </div>

</div>
