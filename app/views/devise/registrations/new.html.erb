<div class="login-page">

  <div class="form-login">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: "email address" %>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>

    <button name="commit" data-disable-with="Signup" type="submit ">
      Sign up</button>

    <p class="message">Are you registered?   <%= link_to "Acess your account", new_session_path(resource_name) %> </p>

<% end %>

  </div>
</div>
