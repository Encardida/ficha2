<div class="login-page">

  <div class="form-login">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages!, :class => 'form-control' %>

    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirme a senha" %>

    <button name="commit" data-disable-with="Enviar" type="submit ">
      Enviar</button>

    <p class="message">Você está registrado? <%= link_to "Acesse sua conta", new_session_path(resource_name) %> </p>

<% end %>

  </div>
</div>
