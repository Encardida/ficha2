<div class="login-page">

  <div class="form-login">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>


      <%= f.email_field :email, autofocus: true, placeholder: "email address" %>

      <button name="commit" data-disable-with="Sending" type="submit ">
              Send me instructions</button>

    <% end %>

    <p class="message">Not registered?   <%= link_to "Create an account", new_registration_path(resource_name) %> </p>
    <p class="message">Are you registered?   <%= link_to "Acess your account", new_session_path(resource_name) %> </p>

  </div>
</div>
