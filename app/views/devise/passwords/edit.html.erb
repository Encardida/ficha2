<div class="page-header">
  <h1>Mude sua senha</h1>
</div>

<script type="text/javascript">
document.getElementById("batata").style.display = "none";

</script>

<center><div class="form-login">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %><br />

    <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => 'form-control', :style => 'width:300px;', :placeholder => "Nova senha" %><br />

    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :style => 'width:300px;', :placeholder => "Confirme a nova senha" %><br />



    <%= f.submit "Mudar minha senha", :class => 'btn btn-default btn-sm', :style => 'margin-bottom:100px;' %>
</div></center>
<% end %>
