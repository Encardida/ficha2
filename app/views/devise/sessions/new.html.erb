<div class="login-page">
  <div class="form-login">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>

      <%= f.email_field :email, autofocus: true, placeholder: "email address", size: 25%>

      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", size: 25%>

