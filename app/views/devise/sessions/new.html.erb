      <% if devise_mapping.rememberable? -%>
        <div >
          <%= f.check_box :remember_me, value: "trab" %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
        -->

      <button name="commit" data-disable-with="Login" type="submit ">
      login</button>


      <p class="message">Not registered?   <%= link_to "Create an account", new_registration_path(resource_name) %> </p>
      <p class="message"> <%= link_to "Forgot your password?", new_password_path(resource_name) %> </p>

    <% end %>

  </div>

</div>
