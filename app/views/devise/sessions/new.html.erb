<div class="login-page" style="margin-top:70px">
  <div class="form-login">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>

      <%= f.email_field :email, autofocus: true, placeholder: "E-mail", size: 25%>

      <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", size: 25%>

      <!--
      <% if devise_mapping.rememberable? -%>
        <div >
          <%= f.check_box :remember_me, value: "trab" %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
        -->

      <button name="commit" data-disable-with="Login" type="submit ">
      Login</button>
      <p class="message" style="margin-top:30px">Esqueceu sua senha?   <%= link_to "Mudar minha senha", new_password_path(resource_name), :class => 'btn btn-default btn-sm' %> </p>


    <% end %>

  </div>

</div>
