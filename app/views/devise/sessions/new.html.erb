<div class="login-page mt-80">
  <div class="form-login">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>

      <%= f.email_field :email, autofocus: true, placeholder: "E-mail", size: 25%>

      <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", size: 25%>

      <button name="commit" data-disable-with="Entrar" type="submit">Entrar</button>
      <p class="message mt-30">Esqueceu sua senha?   <%= link_to "Mudar minha senha", new_password_path(resource_name), :class => 'btn btn-default btn-sm' %> </p>

    <% end %>

  </div>
</div>
